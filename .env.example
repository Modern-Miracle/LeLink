# LeLink Backend Environment Variables
# Copy this file to .env and fill in your values

# ===================================
# Azure Functions Configuration
# ===================================

# OpenAI API Configuration (Required for Medical Triage Bot)
OPENAI_API_KEY=sk-proj-your-api-key-here
OPENAI_CONVERSATION_ASSISTANT_ID=asst_your-assistant-id-here
OPENAI_ORGANIZATION_ID=org-your-organization-id-here

# Azure Functions Settings
AZURE_FUNCTIONS_PORT=7071
FUNCTIONS_WORKER_RUNTIME=node
FUNCTIONS_EXTENSION_VERSION=~4
WEBSITE_NODE_DEFAULT_VERSION=~20

# Development Settings
LOG_LEVEL=info
NODE_ENV=development

# ===================================
# Smart Contract Configuration
# ===================================

# Network URLs (Required for deployment to testnets/mainnet)
SEPOLIA_URL=https://sepolia.infura.io/v3/YOUR-INFURA-PROJECT-ID
MAINNET_URL=https://mainnet.infura.io/v3/YOUR-INFURA-PROJECT-ID

# Private Keys (NEVER commit real keys!)
# For localhost, you can use Hardhat's default account
LOCALHOST_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
TESTNET_PRIVATE_KEY=your-testnet-private-key-here
MAINNET_PRIVATE_KEY=your-mainnet-private-key-here

# Etherscan API (For contract verification)
ETHERSCAN_API_KEY=your-etherscan-api-key-here

# Gas Reporter Settings
REPORT_GAS=true
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key-for-gas-prices

# ===================================
# Integration Configuration
# ===================================

# Blockchain Connection for Azure Functions
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_NETWORK=localhost
BLOCKCHAIN_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# LeLink Contract Address (Will be set after deployment)
LELINK_CONTRACT_ADDRESS=

# ===================================
# Optional Services
# ===================================

# Azure Storage (for production deployments)
AZURE_STORAGE_CONNECTION_STRING=

# Application Insights (for monitoring)
APPINSIGHTS_INSTRUMENTATIONKEY=

# Redis Cache (for session management)
REDIS_URL=redis://localhost:6379

# ===================================
# Security Settings
# ===================================

# API Authentication (if implementing)
API_SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY=24h

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# Feature Flags
# ===================================

# Enable blockchain integration
ENABLE_BLOCKCHAIN_LOGGING=false

# Enable test mode (uses test data instead of real API calls)
TEST_MODE=false

# Enable debug logging
DEBUG=false